{
  "steps": [
    {
      "action": "createEmbed"
      },

    {
      "action":  "compile",
      "mainModule": "portfolio",
      "exeName": "portfolio",
      "sources":  ["*.py"]
      },

    {
      "action": "createDirs",
       "dirs" : []
       },

    {
      "action": "copy",
      "files": []
      },

    {
      "action": "createInstaller",
      "source": "singleUser.iss",
      "target": "singleUserInst.exe"
      }

    ],

  "definitions": {

    "createEmbed": {
      "entryPoint": "embedded.createEmbedded",
      "target": "./embed",
      "if": "parms.buildEmbed",
      "flags": {
          "--buildEmbed": "Rebuild embedded"
          }
      },

    "compile": {
      "entryPoint": "compile.compile",
      "flags": {
        "--force": "Force recompile"
        }
      },

    "createDirs": {
      "entryPoint": "embedded.createDirs"
      },

    "copyDirs": {
      "entryPoint": "embedded.copyDirs"
      },

    "deleteFiles": {
      "entryPoint": "embedded.deleteFile"
      },

    "createInstaller": {
      "entryPoint": "installer.createInstaller",
      "if": "parms.withInstaller",
      "flags": {
        "--withInstaller": "Create installer"
        }
      },

    "zip": {
      "entrypoint": "zipmod.createZip",
      "if": "parms.withZip",
      "flags": {
        "--withZip": "create ZIP file"
        }
      },

    "unzip": {
      "entryPoint": "zipmod.unzip",
      "flags": {
        "--withUnzip": "Unzip distribution"
        }
      },

    "gzip": {
      "entryPoint": "zipmod.gzip"
      },

    "npm": {
      "entryPoint": "npm"
      },

    "requirejs": {},
    "mkdocs": {},
    "embedData": {},
    "upload": {
      "entryPoint": "upload.upload",
      "if": "parms.upload",

      "flags": {
        "--upload": "Upload artifacts"
        }
    }


    }
  }